    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CryTraCtor.Database\CryTraCtor.Database.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Microsoft.AspNetCore.Http.Features">
