@page "/"

@using CryTraCtor.WebApp.Services
@inject IBreadcrumbService BreadcrumbService

<PageTitle>CryTraCtor Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h3" GutterBottom="true" Align="Align.Center" Class="mt-4 mb-6">Welcome to CryTraCtor</MudText>

    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-8">
        Analyze network traffic (PCAP files) to identify connections related to known cryptocurrency services and products.
    </MudText>

    <MudGrid Justify="Justify.Center" Spacing="4">
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4" Elevation="3">
                <MudText Typo="Typo.h5" GutterBottom="true">Analyze Traffic</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">Upload PCAP files to analyze DNS queries and identify potential interactions with crypto services.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/files" FullWidth="true">Go to Files</MudButton>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4" Elevation="3">
                <MudText Typo="Typo.h5" GutterBottom="true">Known Domains</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">View and manage the list of known domain names associated with cryptocurrency services.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/known-domains" FullWidth="true">Manage Domains</MudButton>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudPaper Class="pa-4" Elevation="3">
                <MudText Typo="Typo.h5" GutterBottom="true">Crypto Products</MudText>
                <MudText Typo="Typo.body2" Class="mb-4">Manage the list of cryptocurrency products (wallets, exchanges, etc.) tracked by the system.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/crypto-products" FullWidth="true">Manage Products</MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>

</MudContainer>

@code {
    protected override void OnInitialized()
    {
        var breadcrumbs = new List<BreadcrumbItem>
        {
            new("Home", href: "/", disabled: true)
        };
        BreadcrumbService.SetBreadcrumbs(breadcrumbs);
    }
}
